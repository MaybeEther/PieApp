<Window x:Class="PieApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PieApp"
        mc:Ignorable="d" Height="450" Width="800" Title="Pie Test" ResizeMode="CanResize" Icon="/220px-SNice.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label x:Name="FileNameLabel" Grid.Row="0" HorizontalAlignment="Center" FontSize="16" Content=" " />
        <StackPanel x:Name="FileDropStack" Grid.Row="1"  AllowDrop="True" Background="LightGray" Margin="40,0,40,0" Drop="FileDropStack_Drop">
            <Label HorizontalAlignment="Center" Content="Drop Files Here!"/>
        </StackPanel>

    </Grid>
</Window>
